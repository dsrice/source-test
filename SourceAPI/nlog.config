<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <!-- ログ出力先の定義 -->
  <targets>
    <!-- コンソール出力 -->
    <target xsi:type="Console" name="console"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- ファイル出力（全ログ） -->
    <target xsi:type="File" name="allfile"
            fileName="logs/nlog-all-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- ファイル出力（エラーのみ） -->
    <target xsi:type="File" name="errorfile"
            fileName="logs/nlog-error-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring,Data:maxInnerExceptionLevel=10}" />

    <!-- ファイル出力（Repository層のみ） -->
    <target xsi:type="File" name="repositoryfile"
            fileName="logs/nlog-repository-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />
  </targets>

  <!-- ルール：どのロガーからどのターゲットに出力するか -->
  <rules>
    <!-- Repository層のログ -->
    <logger name="SourceAPI.Repositories.*" minlevel="Trace" writeTo="repositoryfile" final="true" />

    <!-- エラーログ -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- 全ログ -->
    <logger name="*" minlevel="Info" writeTo="allfile,console" />

    <!-- Microsoftのログは警告以上のみ -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
  </rules>
</nlog>
